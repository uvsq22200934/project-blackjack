def tutoriel():
    carte_croupier = tkinter.Label(interface, text='Ici sont les cartes\n du Dealer',
                                   bg='green4', fg='white', font=('comic sans ms', 10))
    carte_croupier.grid(side='right', anchor='top')
    accueil.after(500, accueil.update())
    carte_joueur = tkinter.Label(interface, text='et, là, ce sont vos cartes',
                                 bg='green4', fg='white', font=('comic sans ms', 10))
    carte_joueur.grid(side='right', anchor='top')
    accueil.after(500, accueil.update())
    carte_croupier.grid_forget
    dessin_mise = tkinter.Label(interface, text='ce sont les jetons;\n,' 
                                'miser avant de distribuer les cartes',
                                bg='green4', fg='white', font=('comic sans ms', 10))
    dessin_mise.grid()
    accueil.after(500, accueil.update())
    carte_joueur.grid_forget



def mode_jeu(event):
    if event.widget == play :
        accueil.configure(bg='white')
        #for i in accueil.winfo_children() :
                i.destroy()
        bouton_passer = tkinter.Canvas(accueil, text='passer le tutoriel ?',
                                bg='white', fg ='black')
        bouton_passer.pack(side='top', anchor='center')
        bouton_passer.bind('<Button-1>', fenêtre)
        bouton_tuto = tkinter.Canvas(accueil, text='poursuivre vers le tutoriel ?',
                                    bg='white', fg ='black')
        bouton_tuto.pack(side='bottom', anchor='center')
        bouton_tuto.bind('<Button-1>',fenêtre_triple)
        label_ou = tkinter.Canvas(accueil, text='OU', width='60',
                                 height='60',fg='red', bg='black')
        label_ou.grid(anchor='center')
        label_ou.create_oval(1, 1, 55, 55, width=3, outline='black', fill='mint cream')
        if event.widget == bouton_passer:
            accueil.destroy()
            interface.destroy()
        if event.widget == bouton_tuto : 
            accueil.destroy()
            bouton_tuto['command']=tutoriel


